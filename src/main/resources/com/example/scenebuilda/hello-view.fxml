<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="543.0" prefWidth="694.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scenebuilda.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="22.0" prefWidth="654.0">
         <children>
            <Label text="Formulář pro registraci nového uživatele do systému." />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="1.0">
         <children>
            <GridPane alignment="TOP_CENTER" prefHeight="100.0" prefWidth="520.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="102.0" minWidth="10.0" prefWidth="93.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0" prefWidth="170.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="129.0" minWidth="10.0" prefWidth="92.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="151.0" minWidth="10.0" prefWidth="151.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="  Jméno:" />
                  <TextField fx:id="jmeno" prefHeight="25.0" prefWidth="110.0" GridPane.columnIndex="1" />
                  <Label text="  Datum narození:" GridPane.rowIndex="1" />
                  <Label text="  Login:" GridPane.rowIndex="2" />
                  <Label text="  Příjmení:" GridPane.columnIndex="2" />
                  <Label text="  Oblíbená barva:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <Label text="  Heslo:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                  <TextField fx:id="prijmeni" GridPane.columnIndex="3" />
                  <TextField fx:id="login" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <PasswordField fx:id="password" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                  <DatePicker fx:id="datumNarozeni" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ColorPicker fx:id="color" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="24.0" prefWidth="654.0">
         <children>
            <Label text="Jazyky které ovládám:   " />
            <CheckBox fx:id="aj" mnemonicParsing="false" text=" Angličtina " />
            <CheckBox fx:id="cj" mnemonicParsing="false" text="Čeština " />
            <CheckBox fx:id="ne" mnemonicParsing="false" text=" Němčina " />
            <CheckBox fx:id="sp" mnemonicParsing="false" text="Španělština " />
         </children>
      </HBox>
      <HBox prefHeight="28.0" prefWidth="654.0">
         <children>
            <Label text="Souhlas s podmínkami:  " />
            <RadioButton fx:id="souhlasAno" mnemonicParsing="false" text=" Ano ">
               <toggleGroup>
                  <ToggleGroup fx:id="Možná" />
               </toggleGroup></RadioButton>
            <RadioButton mnemonicParsing="false" text=" Ne " toggleGroup="$Možná" />
         </children>
      </HBox>
      <HBox prefHeight="28.0" prefWidth="654.0" spacing="5.0">
         <children>
            <Button fx:id="registrovat" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Registrovat" />
            <Button fx:id="vypsatVsechny" mnemonicParsing="false" onAction="#onVypsatVsechnyButtonClick" text="Vypsat všechny" />
            <Button fx:id="zajimavosti" mnemonicParsing="false" onAction="#onVypsatZajimavostiButtonClick" text="Zajímavosti" />
         </children>
      </HBox>
      <HBox prefHeight="165.0" prefWidth="654.0">
         <children>
            <TextArea fx:id="poznamky" prefHeight="127.0" prefWidth="605.0" promptText="Prostor pro poznámky" />
         </children>
      </HBox>
      <HBox prefHeight="21.0" prefWidth="654.0">
         <children>
            <Label text="Děkujeme vám za regisraci do systému." />
         </children>
      </HBox>
   </children>
</VBox>
